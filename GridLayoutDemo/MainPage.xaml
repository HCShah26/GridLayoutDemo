<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridLayoutDemo.MainPage">

    <StackLayout>
        <Grid x:Name="myGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height=""/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="emptyImage" Grid.Row="0" Grid.Column="0" />
            <Image Source="top_middle.png" Grid.Row="0" Grid.Column="1">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="top_right.png" Grid.Row="0" Grid.Column="2">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="centre_left.png" Grid.Row="1" Grid.Column="0">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="centre_middle.png" Grid.Row="1" Grid.Column="1">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="centre_right.png" Grid.Row="1" Grid.Column="2">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="bottom_left.png" Grid.Row="2" Grid.Column="0">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="bottom_middle.png" Grid.Row="2" Grid.Column="1">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Source="bottom_right.png" Grid.Row="2" Grid.Column="2">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped" />
                    <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>
    </StackLayout>
</ContentPage>
